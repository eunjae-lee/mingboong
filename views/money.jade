    .row
      #container.col-md-4.col-md-offset-4.col-xs-6.col-xs-offset-6.col-sm-4.col-sm-offset-4
        #add-wrapper
          form(role="form")
            .btn-group.btn-group-lg.btn-group-justified(data-toggle="buttons")
              .label.btn.btn-primary.btn-seul
                input(type="radio", name="options")
                슬기
              .label.btn.btn-primary.btn-ming
                input(type="radio", name="options")
                민지
            .controls
              input(type="number", class="money form-control", placeholder="얼마?")
              input(type="text", class="memo form-control", placeholder="메모? (옵션)")
              button(type="button", class="btn btn-success btn-lg btn-submit") 등록!

        #list-wrapper
          #expenses
            h1 list

