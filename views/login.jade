doctype 5
html
  head
    title= "로그인 - 졸전 가계부"
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/assets/bootstrap-3.0.0/css/bootstrap.min.css', media='screen')
    link(rel='stylesheet', href='/stylesheets/login.css')
body
  #container
    form(class='form-signin', action='#')
      h2.form-signin-heading Please sign in
      input(type='text', class='text-username form-control', placeholder='Username', autofocus)
      input(type='password', class='text-password form-control', placeholder='Password')
      label.checkbox
        input(type='checkbox', value='remember-me')
        span Remember me
      button(class='btn btn-login btn-lg btn-primary btn-block') Sign in
  script(src='/javascripts/jquery-2.0.3.min.js')
  script(src='/javascripts/parse-1.2.12.min.js')
  script(src='/javascripts/login.js')